<div class="max-w-lg mt-20 bg-white shadow-lg rounded-lg p-6 transition inline-block mx-auto relative left-1/2 -translate-x-1/2"
    id='info_window'>
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">{{__ "CLASS.addStudent"}}</h2>
    <!-- <form id="studentForm" class="mt-4" action="/add" method="POST"> -->
    <!-- </form> -->
    <!-- <h3 class="text-lg font-semibold mb-2">Thông tin cơ bản</h3> -->
    <!-- <button type="submit" class="bg-blue-500 text-white p-2 rounded w-full">Thêm sinh viên</button> -->
    <!-- Thông tin cơ bản -->
    <div class="mb-4 space-y-4">
        <input type="text" id="student_id" name="student_id" placeholder="{{__ "inforStudent.studentID"}}" required
            class="p-2 border rounded w-full mb-2">

        <select id="class_id" name="class_id" required class="p-2 border rounded w-full mb-2">
            <option value="">{{__ "CLASS.classId"}}</option>
        </select>

        <select id="course_id" name="course_id" required class="p-2 border rounded w-full mb-2">
            <option value="">{{__ "COURSE.courseName"}}</option>
        </select>

        <select id="year" name="year" required class="p-2 border rounded w-full mb-2">
            <option value="">{{__ "CLASS.year"}}</option>
        </select>

        <select class="p-2 border rounded w-full mb-2 max-w-28 mx-auto" id="semester" name="semester">
            <option value="">{{__ "CLASS.semester"}}</option>
            <option value="1">I</option>
            <option value="2">II</option>
        </select>
        <button type="submit" class="bg-blue-500 text-white p-2 rounded w-full" onclick="submitFormData()">{{__ "CLASS.submitButton"}}</button>
    </div>

</div>

