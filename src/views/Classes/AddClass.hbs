<div class="max-w-lg mt-20 bg-white shadow-lg rounded-lg p-6 transition inline-block mx-auto relative left-1/2 -translate-x-1/2"
    id='info_window'>
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">{{__ "CLASS.addClass"}}</h2>
    <div class="mb-4 space-y-4">
        <input type="text" id="class_id" name="class_id" placeholder="{{__ "CLASS.classId"}}" required
            class="p-2 border rounded w-full mb-2">

        <select id="course_id" name="course_id" required class="p-2 border rounded w-full mb-2">
            <option value="">{{__ "COURSE.courseCode"}}</option>
        </select>

        <input type="text" id="lecturer" name="lecturer" placeholder="{{__ "CLASS.lecturer"}}" required
            class="p-2 border rounded w-full mb-2">

        <select id="year" name="year" required class="p-2 border rounded w-full mb-2">
            <option value="">{{__ "CLASS.year"}}</option>
        </select>

        <!-- TODO: Query all the existing semester for the selected year -->
        <select class="p-2 border rounded w-full mb-2 max-w-28 mx-auto" id="semester" name="semester">
            <option value="">{{__ "CLASS.semester"}}</option>
            <option value="1">I</option>
            <option value="2">II</option>
        </select>

        <input type="text" id="room" name="room" placeholder="{{__ "CLASS.room"}}" required
            class="p-2 border rounded w-full mb-2">

        <input type="number" id="maximum" name="maximum" placeholder="{{__ "CLASS.maximum"}}" required
            class="p-2 border rounded w-full mb-2">


        <div class="mb-4 flex flex-row justify-center items-center space-x-9">
            <label for="schedule2" class="block text-sm font-medium mb-1">{{__ "CLASS.mon"}}</label>
            <label for="schedule3" class="block text-sm font-medium mb-1">{{__ "CLASS.tue"}}</label>
            <label for="schedule4" class="block text-sm font-medium mb-1">{{__ "CLASS.wed"}}</label>
            <label for="schedule5" class="block text-sm font-medium mb-1">{{__ "CLASS.thu"}}</label>
            <label for="schedule6" class="block text-sm font-medium mb-1">{{__ "CLASS.fri"}}</label>
            <label for="schedule7" class="block text-sm font-medium mb-1">{{__ "CLASS.sat"}}</label>
        </div>

        <div class="mb-4 flex flex-row justify-center items-center space-x-10" id="schedule_div">
            <input type="checkbox" id="schedule2" name="Mon" class="">
            <input type="checkbox" id="schedule2" name="Tue" class="">
            <input type="checkbox" id="schedule3" name="Wed" class="">
            <input type="checkbox" id="schedule7" name="Thu" class="">
            <input type="checkbox" id="schedule4" name="Fri" class="">
            <input type="checkbox" id="schedule5" name="Sat" class="">
        </div>

        <div class="mb-4 flex flex-row justify-center items-center">
            <label for="time_1" class="block text-sm font-medium mb-1 mr-24">{{__ "CLASS.startTimeLabel"}}</label>
            <label for="time_2" class="block text-sm font-medium mb-1 ml-24">{{__ "CLASS.endTimeLabel"}}</label>
        </div>

        <div class="mb-4 flex flex-row justify-center items-center">
            <input type="time" name="start" id="time_1" placeholder="{{__ "CLASS.startTimePlaceholder"}}" required
                class="p-2 border rounded w-full mb-2 max-w-28 mx-20">

            <input type="time" name="stop" id="time_2" placeholder="{{__ "CLASS.endTimePlaceholder"}}" required
                class="p-2 border rounded w-full mb-2 max-w-28 mx-20">
        </div>

        <button class="bg-blue-500 text-white p-2 rounded w-full" onclick="submitFormData()">{{__ "CLASS.submitButton"}}</button>
    </div>

</div>

<script src="https://unpkg.com/i18next@21.6.3/i18next.min.js"></script>
<script src="https://unpkg.com/i18next-http-backend@1.4.3/i18nextHttpBackend.min.js"></script>
<script src="https://unpkg.com/i18next-browser-languagedetector@6.1.2/i18nextBrowserLanguageDetector.min.js"></script>
<script src="/js/i18n-init.js"></script>
<script src="/js/addClass.js"></script>
