<div class="max-w-6xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <h2 class="text-3xl font-bold text-center text-gray-700">{{__ "SEARCHSTUDENT.title"}}</h2>
    <div>
        <button onclick="exportCSVList()" class="my-6 bg-blue-500 hover:bg-blue-600 text-white font-bold p-3 rounded-lg">
            Export CSV
        </button>
        <button onclick="exportExcelList()" class="my-6 bg-blue-500 hover:bg-blue-600 text-white font-bold p-3 rounded-lg">
            Export Excel
        </button>

    </div>
    <!-- Form tìm kiếm với hai cột -->
    <div class="grid grid-cols-3 gap-4">
        <!-- Ô nhập MSSV -->
        <input type="text" id="searchMSSV" placeholder="{{__ "inforStudent.studentID"}}"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        
        <!-- Ô nhập Họ Tên -->
        <input type="text" id="searchName" placeholder="{{__ "inforStudent.name"}}"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        <!-- Dropdown chọn khoa -->
        <select id="facultySelect"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 mt-4">
            <option value="">{{__ "inforStudent.faculty"}}</option>
        </select>
    </div>

    <!-- Nút tìm kiếm -->
    <div class="flex justify-center">
        <button onclick="searchStudent()" 
            class="w-2/5 mt-6 bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 rounded-lg transition duration-300">
            {{__ "SEARCHSTUDENT.searchStudent"}}
        </button>
    </div>

    <!-- Kết quả -->
    <div id="studentListContainer" class="mt-6 p-4 bg-gray-100 rounded-lg max-h-[600px] overflow-auto">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">{{__ "inforStudent.listStudent"}}</h3>
        <div id="studentList" class="grid grid-cols-2 gap-6"></div>
    </div>
</div>
