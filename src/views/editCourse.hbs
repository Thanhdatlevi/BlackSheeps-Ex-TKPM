<div class="max-w-5xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold mb-6">{{__ "COURSE.manage"}}</h1>

    <!-- Danh sách các khóa học -->
    <div class="mb-8">
        <h3 class="text-xl font-semibold mb-4">{{__ "COURSE.listCourse"}}</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="py-2 px-4 border-b text-left">{{__ "COURSE.courseCode"}}</th>
                        <th class="py-2 px-4 border-b text-left">{{__ "COURSE.courseName"}}</th>
                        <th class="py-2 px-4 border-b text-left">{{__ "COURSE.faculty"}}</th>
                        <th class="py-2 px-4 border-b text-left">{{__ "COURSE.status"}}</th>
                        <th class="py-2 px-4 border-b text-center">{{__ "COURSE.action"}}</th>
                    </tr>
                </thead>
                <tbody id="courseTableBody">
                    <!-- Dữ liệu sẽ được thêm vào đây bằng JavaScript -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Form chỉnh sửa khóa học -->
    <div id="editModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex justify-center items-center">
        <div class="bg-white rounded-lg p-6 shadow-lg w-96">
            <h3 class="text-xl font-semibold mb-4">{{__ "COURSE.update"}}</h3>
            <form id="editCourseForm">
                <input type="hidden" id="editCourseId">
                <div class="mb-4">
                    <label for="editCourseName" class="block text-sm font-medium mb-1">{{__ "COURSE.courseName"}}:</label>
                    <input type="text" id="editCourseName" name="courseName" required class="p-2 border rounded w-full">
                </div>
                <div class="mb-4">
                    <label for="editDescription" class="block text-sm font-medium mb-1">{{__ "COURSE.description"}}:</label>
                    <textarea id="editDescription" name="description" required class="p-2 border rounded w-full"></textarea>
                </div>
                <div class="mb-4">
                    <label for="editDepartment" class="block text-sm font-medium mb-1">{{__ "COURSE.faculty"}}:</label>
                    <select id="editDepartment" name="department" required class="p-2 border rounded w-full">
                        <!-- Danh sách khoa phụ trách sẽ được thêm vào đây -->
                    </select>
                </div>
                <div class="mb-4">
                    <label for="editCredit" class="block text-sm font-medium mb-1">{{__ "COURSE.credits"}}:</label>
                    <textarea id="editCredit" name="credit" required class="p-2 border rounded w-full"></textarea>  
                </div>
                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="closeEditModal()" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded">
                        {{__ "COURSE.cancleButton"}}
                    </button>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                        {{__ "COURSE.saveButton"}}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

